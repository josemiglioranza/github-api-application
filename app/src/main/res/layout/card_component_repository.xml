<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_begin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_middle_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="Repositório da Ca"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star_repository"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:srcCompat="@drawable/star_repository"
        app:layout_constraintStart_toEndOf="@id/guide_middle"
        app:layout_constraintTop_toTopOf="@id/guide_middle_vertical"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/star_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1k"
        android:fontFamily="@font/roboto_m"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/star_repository"
        app:layout_constraintTop_toTopOf="@id/guide_middle_vertical" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fork_repository"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:srcCompat="@drawable/fork_repository"
        android:tint="@color/black"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@id/star_text"
        app:layout_constraintTop_toTopOf="@id/guide_middle_vertical" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fork_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1k"
        android:fontFamily="@font/roboto_m"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/fork_repository"
        app:layout_constraintTop_toTopOf="@id/guide_middle_vertical" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_repository"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_repository_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_l"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_marginTop="16dp"
        tools:text="Este é um repositório destinado para salvar imagens e códigos de animais, para que possa ser realizada uma API que será publicada"
        app:layout_constraintStart_toEndOf="@id/guide_middle"
        app:layout_constraintEnd_toStartOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/star_repository"/>

</androidx.constraintlayout.widget.ConstraintLayout>